# Configuración de la aplicación
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Configuración de ClickUp API
CLICKUP_API_TOKEN=your_clickup_api_token_here
CLICKUP_WEBHOOK_SECRET=your_webhook_secret_here

# Configuración de base de datos - POSTGRESQL POR DEFECTO
DATABASE_URL=postgresql://postgres:admin123@localhost:5432/clickup_project_manager
# Para SQLite (solo desarrollo local): sqlite:///./clickup_manager.db
# Para Railway: se configura automáticamente

# Configuración específica de PostgreSQL
POSTGRES_ENABLED=True
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=clickup_project_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin123

# Configuración de Redis
REDIS_URL=redis://localhost:6379

# Configuración de seguridad
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de automatización
AUTOMATION_ENABLED=True
AUTOMATION_INTERVAL=300

# Configuración de reportes
REPORTS_ENABLED=True
REPORTS_STORAGE_PATH=data/reports

# Configuración de integraciones
INTEGRATIONS_ENABLED=True

# Configuración de Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=notifications@example.com
SMTP_USE_TLS=True
SMTP_USE_SSL=False

# Configuración de Telegram Bot
# Telegram Bot (DESHABILITADO)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Configuración de SMS (Twilio)
SMS_ENABLED=False
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SMS_FROM=

# Campos personalizados en ClickUp para destinatarios desde tareas
# Aceptan múltiples valores separados por comas; pueden ser IDs o nombres de campo
TASK_EMAIL_FIELDS=Email
TASK_TELEGRAM_FIELDS=
TASK_SMS_FIELDS=Celular